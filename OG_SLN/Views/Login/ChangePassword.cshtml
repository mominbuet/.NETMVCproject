@model OG_SLN.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div class="usCreate_1 marRight_1">
    <fieldset>
        <legend>Change Password</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.OLD_PASS)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.OLD_PASS)
            @Html.ValidationMessageFor(model => model.OLD_PASS)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NEW_PASS)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.NEW_PASS)
            @Html.ValidationMessageFor(model => model.NEW_PASS)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RE_NEW_PASS)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.RE_NEW_PASS)
            @Html.ValidationMessageFor(model => model.RE_NEW_PASS)
        </div>
        <p>
            <input class="btn btn-success butTop_1" type="submit" value="Change Password" />
        </p>
    </fieldset>
    </div>
}
