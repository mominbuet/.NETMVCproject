@model OG_SLN.SET_BOOK_TYPE
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SET_BOOK_TYPE</legend>
         <div class="new_FormDiv">
            @Html.HiddenFor(model => model.BOOK_TYPE_NO)
            <div class="editor-label">
                @Html.LabelFor(model => model.BOOK_TYPE_NAME)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.BOOK_TYPE_NAME)
                @Html.ValidationMessageFor(model => model.BOOK_TYPE_NAME)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.DESC_BOOK_TYPE)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DESC_BOOK_TYPE)
                @Html.ValidationMessageFor(model => model.DESC_BOOK_TYPE)
            </div>
            <div class="editor-label">
                Book Group
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.BOOK_GROUP_NO,
                new SelectList(ViewBag.BOOK_GROUP_NO as System.Collections.IEnumerable,
                    "BOOK_GROUP_NO", "BOOK_GROUP_NAME"))
                @Html.ValidationMessageFor(model => model.BOOK_GROUP_NO)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ACTIVE_BOOK_TYPE)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ACTIVE_BOOK_TYPE)
                @Html.ValidationMessageFor(model => model.ACTIVE_BOOK_TYPE)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ACTIVE_FROM)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.ACTIVE_FROM, "{0:yyyy-MM-dd}", new { @class="datesinspec"})
                @Html.ValidationMessageFor(model => model.ACTIVE_FROM)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ACTIVE_TO)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.ACTIVE_TO, "{0:yyyy-MM-dd}", new { @class = "datesinspec" })
                @Html.ValidationMessageFor(model => model.ACTIVE_TO)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.SL_NUM)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.SL_NUM,"{0:0}")
                @Html.ValidationMessageFor(model => model.SL_NUM)
            </div>
            <p>
                <input type="submit" value="Save" class="btn btn-success" />
            </p>
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index", new { }, new { @class="btn btn-primary"})
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
