@model OG_SLN.TRN_DCR
@{
    ViewBag.Title = "Details";
}
<h2>
    Details</h2>
@section shadScripts {
    @Html.Raw(ViewBag.jsmsg)
}
<script type="text/javascript">
    function setEdit(id) {
        $.getJSON("@Url.Content("~")"+"DCR/getDetailsWithoutButtons?typeID="+ id, function(data) {
            $("#tblDetailsAdd").html(data.html);
            $("#tblDetailsAdd").show();
        });
    }
</script>
<fieldset>
    <legend>DCR Entry</legend>
    <table class="table table-responsive">
        <tr>
            <td>
                Work Type
            </td>
            <td>
                 @Html.ValueFor(model => model.GEN_DCR_TYPE.DCR_TYPE)
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td>
                HR
            </td>
            <td>
                @Html.ValueFor(model => model.SEC_USERS.USER_MOBILE)
            </td>
            <td>
            </td>
            <td>
               
            </td>
            <td>
            @Html.ValueFor(model => model.REF_ZM_MOBILE)
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td>
                Date
            </td>
            <td>
                 @Html.ValueFor(model => model.TRN_DCR_DATE, "{0:dd/MM/yyyy}")
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td>
                Start Location
            </td>
            <td>
                @Html.ValueFor(model => model.WORK_AREA_FROM_NAME)
            </td>
            <td>
            </td>
            <td>
                End Location
            </td>
            <td>
                 @Html.ValueFor(model => model.WORK_AREA_TO_NAME)
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td>
                Start time
            </td>
            <td>
                 @Html.ValueFor(model => model.FROM_TIME, "{0:H:m}")
            </td>
            <td>
            </td>
            <td>
                End Time
            </td>
            <td>
                @Html.ValueFor(model => model.TO_TIME, "{0:H:m}")
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <td>
                Transport
            </td>
            <td>
                @Html.ValueFor(model=>model.SET_TRANSPORT_TYPE.TRANS_TYPE_NAME)
            </td>
            <td>
            </td>
            <td>
                Cost
            </td>
            <td>
                @Html.ValueFor(model => model.FARE_AMT,"{0:0}")
            </td>
        </tr>
        <tr>
            <td>
                Institute
            </td>
            <td>
                @Html.ValueFor(model => model.txtINS)
            </td>
            <td>
            </td>
        </tr>
    </table>
    <table id="tblDetailsAdd" class="table table-responsive">
        <thead id="theadsdmp">
        </thead>
    </table>
</fieldset>
<p>
 <div class="btn-group btn-group-sm">
    @Html.ActionLink("Edit", "Create", new { id = Model.DCR_NO }, new { @class = "btn btn-warning" })
    
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-primary" })
    </div>
</p>
