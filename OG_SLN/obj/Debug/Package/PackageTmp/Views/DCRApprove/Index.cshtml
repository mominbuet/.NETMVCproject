}

<script language="javascript" type="text/javascript">
    $(function () {

    });

    function do_search() {

        var url = '../DCRApprove/Index';
        var frm = $('form');
        var data = $(frm).serialize();
        $.post(url, data, function (res) {
            $('#div_list').html(res);
        });
    }

    function do_clear() {
        $('#div_list').html('');
    }

    function load_url(url) {
        $.get(url, function (res) {
            $('#div_list').html(res);
        });

        return false;
    }
</script>

