@model OG_SLN.TRN_DCR

<tr style="background:#e4e4e4;" id="DcrEditContent"><td colspan="11">
@using (Html.BeginForm("DcrEdit", "Reports", FormMethod.Post, new { @id = "DcrEditForm"}))
{ 
    @Html.HiddenFor(model => model.DCR_NO)

    <div style="float:left;width:80%">
        <table width="99%;" style="margin:5px;">
            <tr>
                <td style="width:20% !important; line-height:20px;">Transport Type</td>
                <td style="width: 20%;">
                    <div class="editor-field" style="margin-top:5px!important;">
                        @Html.DropDownList("TRANS_TYPE_NO")
                    </div>
                </td>
                <td style="width: 15%; line-height:20px;">Cost</td>
                <td style="width:20%;">
                     <div class="editor-field" style="margin-top:5px!important;">
                        @Html.TextBoxFor(model => model.APPROVE_FARE_AMT)
                     </div>
                </td>
            </tr>
        </table>
    </div>
    
    <input style="float:right; margin-right:2%; margin-top:10px;" type="button" id="DcrEditSubmit" value="Save" />
    <input style="float:right; margin-right:2%; margin-top:10px;" type="button" id="DcrCancel" value="Cancel" />
}

</td></tr>