@model OG_SLN.SET_SPECIMEN

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Specimen </legend>

        @Html.HiddenFor(model => model.SPECIMEN_NO)
        <div class="new_FormDiv">
            <div class="editor-label">
                Specimen Name
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SPECIMEN_NAME)
                @Html.ValidationMessageFor(model => model.SPECIMEN_NAME)
            </div>
            <div class="editor-label">
                Specimen Code
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SPEC_CODE)
                @Html.ValidationMessageFor(model => model.SPEC_CODE)
            </div>
            <div class="editor-label">
                BNG Name
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SPECIMEN_NAME_BNG)
                @Html.ValidationMessageFor(model => model.SPECIMEN_NAME_BNG)
            </div>
            <div class="editor-label">
                Description
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DESC_SPECIMEN)
                @Html.ValidationMessageFor(model => model.SPECIMEN_DESC)
            </div>
            <div class="editor-label">
                Book Type
            </div>
            <div class="editor-field">
                @Html.DropDownList("BOOK_TYPE_NO", String.Empty)
                @Html.ValidationMessageFor(model => model.BOOK_TYPE_NO)
            </div>
            <div class="editor-label">
                Specimen UNQ CODE
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.BOOK_UNIQUE_CODE)
                @Html.ValidationMessageFor(model => model.BOOK_UNIQUE_CODE)
            </div>
            <div class="editor-label">
                Active
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ACTIVE_SPECIMEN)
                @Html.ValidationMessageFor(model => model.ACTIVE_SPECIMEN)
            </div>
            <div class="editor-label">
                Active From
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.ACTIVE_FROM,  "{0:yyyy-MM-dd}", new { @class = "datesinspec form-control" })
                @Html.ValidationMessageFor(model => model.ACTIVE_FROM)
            </div>
            <div class="editor-label">
                Active To
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.ACTIVE_TO, "{0:yyyy-MM-dd}", new { @class = "datesinspec form-control" })
                @Html.ValidationMessageFor(model => model.ACTIVE_TO)
            </div>
        <p>
            <input type="submit" value="Update" class="btn btn-success" />
        </p>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { }, new { @class="btn btn-primary"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
